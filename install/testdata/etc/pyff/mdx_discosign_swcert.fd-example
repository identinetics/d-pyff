- when update:
    - load:
       - /var/md_source
    - break
- when request:
    - select
    - pipe:
        - when accept application/xml:
             - xslt:
                 stylesheet: unsign.xsl
             - xslt:
                 stylesheet: tidy.xsl
             - first
             - finalize:
                cacheDuration: PT4H
                validUntil: P10D
                ID: testWpvPortalverbundAt_
             - sign:
                  key: /etc/pki/sign/private/metadata_key.pem
                  cert: /etc/pki/sign/certs/metadata_crt.pem
             - emit application/xml
             - break
        - when accept application/json:
             - xslt:
                 stylesheet: discojson.xsl
             - emit application/json:
             - break
